#!/usr/bin/env bash

# Check if an argument is provided
if [ $# -ne 1 ]; then
  echo "Usage: $0 {IP_ADDRESS}"
  exit 1
fi

# Extract the IP address from the argument
ip_address="$1"

# Ping the IP address 5 times and display the results
echo "PING $ip_address ($ip_address) 56(84) bytes of data."

# Run the ping command and capture the output in a variable
ping_output=$(ping -c 5 "$ip_address")

# Display the captured output in the expected format
echo "$ping_output"

# Exit successfully
exit 0
